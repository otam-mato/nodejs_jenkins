pipeline {
    
    environment {
        dockerregistry = 'https://registry.hub.docker.com'
        dockerhuburl = "montcarotte/jenkins_nodejs_app_demo"
        githuburl = "klimenta/chitchat"
        dockerhubcrd = 'dockerhub'
    }

    agent any
 
    tools {nodejs "nodejs"}
 
    stages {
 
        stage('Check out') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/otammato/FullStack_NodeJS_MySql_Docker.git']])
            }
        }    
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
    }
}
